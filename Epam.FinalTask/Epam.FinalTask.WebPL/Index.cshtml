@using Epam.FinalTask.BLL.Interfaces;
@using Epam.FinalTask.Ioc;
@{
    Layout = null;
    if (!User.IsInRole("admin"))
    {

        string user = User.Identity.Name;
        int userID = DependencyResolver.AccountBL.GetUserIDByLogin(user);

        Response.Redirect("/user/profile?id=" + userID);
    }
    else {
        Response.Redirect("~/user/search");
    }
}

