@using Epam.FinalTask.BLL.Interfaces;
@using Epam.FinalTask.Entities;
@using Epam.FinalTask.Ioc;
@{
    Layout = "~/Layouts/_Layout.cshtml";

    IUserBL userBL = DependencyResolver.UserBL;

    IEnumerable<UserDTO> users = userBL.GetAll();
}

    <div class="row">
        <div class="col-lg-8">
            <input class="form-control" type="text" placeholder="Введите имя и фамилию" aria-label="Search">

            @foreach (var user in users)
            {
                <div>
                    <img src="@("data:image;base64," + Convert.ToBase64String(@user.Avatar))" class="img-thumbnail"/>
                    <h3>@user.Name @user.Surname @user.HouseNumber</h3>
                </div>
            }

        </div>

        <div class="col-lg-3">
            <div class="form-row">
                <div class="form-group col-12">
                    <input type="text" class="form-control" placeholder="Город" />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-12">
                    <input type="text" class="form-control" placeholder="Улица" />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-12">
                    <input type="number" class="form-control" placeholder="Дом" />
                </div>
            </div>


            <div class="form-row">
                <label>Возраст </label>
            </div>

            <div class="form-row">
                <div class="form-group col-6">
                    <input type="number" class="form-control" placeholder="От" />
                </div>
                <div class="form-group col-6">
                    <input type="number" class="form-control" placeholder="До" />
                </div>
            </div>


            <button type="submit" class="btn btn-primary"> Поиск</button>
        </div>
    </div>
    

