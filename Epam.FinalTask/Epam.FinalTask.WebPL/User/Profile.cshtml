@using Epam.FinalTask.Entities;
@using Epam.FinalTask.Ioc;
@using Epam.FinalTask.BLL.Interfaces;
@{
    Layout = "~/Layouts/_Layout.cshtml";
    string queryId = Request.QueryString["ID"];
    if (queryId.IsEmpty() || !queryId.IsInt())
    {
        Response.Redirect("~/error");
    }

    IUserBL userBL = DependencyResolver.UserBL;
    int id = int.Parse(queryId);
    UserDTO user = userBL.GetById(id);

    
}

    <section class="col-md-8 col-lg-8 mt-2 bg-white rounded">
        <div class="row p-2">
            <div class="col-lg-3 col-md-4">
                <img src="@("data:image;base64," + Convert.ToBase64String(@user.Avatar))" alt="Ваша аватарка" class="img-thumbnail">
            </div>

            <div class="col-lg-9">

                <h4 class="my-0">@user.Name @user.Surname</h4>
                <div class="row">
                    <div class="col-3">
                        <div class="mt-2">
                            Дата рождения:
                        </div>

                        <div class="mt-2">
                            Город:
                        </div>

                        <div class="mt-2">
                            Улица:
                        </div>

                        <div class="mt-2">
                            Дом:
                        </div>
                        
                        @if (user.ApartmentNumber != 0)
                        { 
                            <div class="mt-2">
                                Квартира:
                            </div>
                        }
                    </div>
                    <div class="col-3 p-0">
                        <div class="mt-2">
                            @user.Birthday
                        </div>
                        <div class="mt-2">
                            @user.City
                        </div>
                        <div class="mt-2">
                            @user.Street
                        </div>

                        <div class="mt-2">
                            @user.HouseNumber
                        </div>

                        @if (user.ApartmentNumber != 0)
                        { 
                            <div class="mt-2">
                                11
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h5>Соседи</h5>
            </div>
        </div>
    </section>