@using Epam.FinalTask.BLL.Interfaces;
@using Epam.FinalTask.Ioc;
@{
    IAccountBL accountBL = DependencyResolver.AccountBL;
    int userID = accountBL.GetUserIDByLogin(User.Identity.Name);
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Style/_Style.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <title>Final Task</title>
</head>
<body>
    <input type="hidden" value="@userID" id="user-id" />
    <div class="container-fluid">
        <div class="row">
            <nav class="col-sm-2 col-md-2 col-lg-2 mx-2 my-2 h-50 bg-white rounded">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="~/User/Profile?id=@userID">Домашняя</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="~/Messages?id=@userID">Сообщения</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/User/Search">Поиск</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/User/Friends?id=@userID">Друзья</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/User/Edit?id=@userID">Профиль</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Actions/SignOut">Выход</a>
                    </li>
                </ul>
            </nav>
            @RenderBody()  
        </div>
    </div>
</body>
</html>
